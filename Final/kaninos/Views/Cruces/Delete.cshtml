@model kaninos.Models.CruceDTO
@{
    ViewBag.Title = "Eliminar";
    Layout ="~/Views/Template/_CrucesLayout.cshtml";
}

                <div class="col mx-3 bg-dark text-white">
                    <h3 class="text-center fw-bold pt-5">@ViewData["Title"]</h3>
                    <div class="row">
                        <div class="col-4">
                            <div class="container-fluid">
                                <p>Nombre del Cruse:</p>
                                <p>Macho:</p>
                                <p>Hembra:</p>
                                <p>Fecha de Emparejamiento:</p>
                                <p>Fecha de Nacimiento:</p>
                                <P>Ejemplares Nacidos:</P>
                                <p>Cantidad Machos:</p>
                                <p>Cantidad Hembras:</p>
                                <p>Número de Bajas:</p>  
                                <p>Criador:</p>                         
                            </div>
                        </div>
                        <div class="col">
                            <div class="container-fluid">
                                <p>@Model.nombre</p>
                                <p>@Model.padre</p>
                                <p>@Model.madre</p>
                                <p>@Model.fecha_emp</p>
                                <p>@Model.fecha_nac</p>
                                <P>@Model.ejemplares_nac</P>
                                <p>@Model.cantidad_machos</p>
                                <p>@Model.cantidad_hembras</p>
                                <p>@Model.num_bajas</p>  
                                <p>@Model.criador</p>
                            </div>
                        </div>
                    </div>
                    <h2 class="text-center fw-bold py-2">¿Estás Seguro?</h2>
                    <form action="" method="post">
                        <input type="hidden" asp-for="id">
                        <div class="text-center">
                            <input class="btn btn-danger ml-2 mr-2" type="submit" value="Eliminar">
                            <a class="btn btn-primary ml-2" asp-controller="Cruces" asp-action="Index">Cancelar</a>
                        </div>
                    </form>
                </div>