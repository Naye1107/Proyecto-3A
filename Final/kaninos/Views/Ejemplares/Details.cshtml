@model kaninos.Models.EjemplarDTO
@{
    ViewBag.Title = "Detalles";
    Layout ="~/Views/Template/_EjemplaresLayout.cshtml";
    var fotoPath = $"~/image/usr/{(@Model.foto_ejemplar ?? "not-found.png")}";
}

                <div class="col mx-3 bg-dark text-white">
                    <h3 class="text-center fw-bold pt-5">@ViewData["Title"]</h3>
                    <h2 class="text-center fw-bold py-2"></h2>
                    <div class="row">
                        <div class="col-4">
                            <div class="container-fluid">
                                <p>Nombre:</p>
                                <p>Edad:</p>
                                <p>Raza:</p>
                                <p>Criador:</p>
                                <p>Variedad:</p>
                                <p>Color:</p>
                                <p>Descripci√≥n:</p>                          
                            </div>
                        </div>
                        <div class="col">
                            <div class="container-fluid">
                                <p>@Model.nombre</p>
                                <p>@Model.edad</p>
                                <p>@Model.raza</p>
                                <p>@Model.criador</p>
                                <p>@Model.variedad</p>
                                <p>@Model.color</p>
                                <p>@Model.descripcion</p>
                            </div>
                        </div>
                    </div>
                    <div class="container">
                        <p>Foto Del Ejemplar:</p>
                        <div class="py-2">
                            <img src="@fotoPath" alt="@Model.nombre" class="img-fluid img-not" asp-append-version="true" id="foto_ejemplar" name="foto_ejemplar"></img>
                        </div>
                    </div>
                    <div class="text-right">
                        <a class="btn btn-primary ml-2" asp-controller="Ejemplares" asp-action="Index">Volver</a>
                    </div>
                </div>